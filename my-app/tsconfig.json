{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "entities": ["entities/*"],
      "shared": ["shared/*"],
      "features": ["features/*"],
      "widgets": ["widgets/*"],
      "screens": ["screens/*"],
      "processes": ["processes/*"],
      //      "@/*": [
      //        "./*", "./src/*"
      //      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
